{
  "name": "opulencevpn",
  "version": "0.8.9",
  "description": "Official Opulence VPN client for desktop.",
  "main": "index.js",
  "author": "Anthony Musashi",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -p always"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "sincerelyant",
        "repo": "Opulence-VPN"
      }
    ],
    "productName": "Opulence",
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": false,
      "oneClick": false
    },
    "files": [
      "index.js",
      "index.html",
      "node_modules/**/*",
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      "bin"
    ],
    "directories": {
      "buildResources": "src/assets/icons",
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^5.0.5",
    "jsdom": "^20.0.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0"
  }
}
